{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSON schema for PoCoPI's configuration file.",
  "type": "object",
  "properties": {
    "icon": {
      "$ref": "#/$defs/image"
    },
    "title": {
      "type": "string",
      "description": "The title of the web app.",
      "minLength": 1
    },
    "subtitle": {
      "type": "string",
      "description": "The subtitle of the web app. Shown in between the title and description.",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "The description of the web app.",
      "minLength": 1
    },
    "informationCards": {
      "type": "array",
      "description": "List of information cards to be shown below the web app description.",
      "items": {
        "$ref": "#/$defs/information-card"
      },
      "minItems": 1
    },
    "informedConsent": {
      "type": "string",
      "description": "The informed consent to be displayed before starting the tests.",
      "minLength": 1
    },
    "faq": {
      "type": "array",
      "description": "A list of frequently asked questions.",
      "items": {
        "$ref": "#/$defs/faq"
      },
      "minItems": 1
    },
    "preTestForm": {
      "$ref": "#/$defs/form"
    },
    "postTestForm": {
      "$ref": "#/$defs/form"
    },
    "groups": {
      "type": "object",
      "description": "List of test groups.",
      "patternProperties": {
        "^([\\w-]+)$": {
          "$ref": "#/$defs/group"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "protocols": {
      "type": "object",
      "description": "List of protocols the test groups will use.",
      "patternProperties": {
        "^([\\w-]+)$": {
          "$ref": "#/$defs/protocol"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "phases": {
      "type": "object",
      "description": "List of phases the test protocols will use.",
      "patternProperties": {
        "^([\\w-]+)$": {
          "$ref": "#/$defs/phase"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "questions": {
      "type": "object",
      "description": "List of questions the test phases will use.",
      "patternProperties": {
        "^([\\w-]+)$": {
          "$ref": "#/$defs/phase-question"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  },
  "required": [
    "icon",
    "title",
    "description",
    "informedConsent",
    "groups"
  ],
  "additionalProperties": false,
  "$defs": {
    "color": {
      "type": "object",
      "description": "An RGB color.",
      "properties": {
        "r": {
          "type": "integer",
          "description": "The red part of RGB.",
          "minimum": 0,
          "maximum": 255
        },
        "g": {
          "type": "integer",
          "description": "The green part of RGB.",
          "minimum": 0,
          "maximum": 255
        },
        "b": {
          "type": "integer",
          "description": "The blue part of RGB.",
          "minimum": 0,
          "maximum": 255
        }
      },
      "required": [
        "r",
        "g",
        "b"
      ],
      "additionalProperties": false
    },
    "faq": {
      "type": "object",
      "description": "A frequently asked question.",
      "properties": {
        "question": {
          "type": "string",
          "description": "The question.",
          "minItems": 1
        },
        "answer": {
          "type": "string",
          "description": "The answer.",
          "minItems": 1
        }
      },
      "required": [
        "question",
        "answer"
      ],
      "additionalProperties": false
    },
    "form": {
      "type": "object",
      "description": "Structure of the form.",
      "properties": {
        "questions": {
          "type": "array",
          "description": "List of questions.",
          "items": {
            "$ref": "#/$defs/form-question"
          },
          "minItems": 1
        }
      },
      "required": [
        "questions"
      ]
    },
    "form-option": {
      "type": "object",
      "description": "An option.",
      "properties": {
        "text": {
          "type": "string",
          "description": "The options's text.",
          "minLength": 1
        },
        "image": {
          "$ref": "#/$defs/image"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "form-question": {
      "type": "object",
      "description": "A form question.",
      "allOf": [
        {
          "properties": {
            "category": {
              "type": "string",
              "description": "The category to which this question belongs to.",
              "minLength": 1
            },
            "text": {
              "type": "string",
              "description": "The question's text.",
              "minLength": 1
            },
            "image": {
              "$ref": "#/$defs/image"
            }
          },
          "required": [
            "category",
            "text"
          ]
        },
        {
          "oneOf": [
            {
              "$ref": "#/$defs/question-select-multiple"
            },
            {
              "$ref": "#/$defs/question-select-one"
            },
            {
              "$ref": "#/$defs/question-number"
            },
            {
              "$ref": "#/$defs/question-slider"
            },
            {
              "$ref": "#/$defs/question-text-short"
            },
            {
              "$ref": "#/$defs/question-text-long"
            }
          ]
        }
      ]
    },
    "group": {
      "type": "object",
      "description": "A test group.",
      "properties": {
        "probability": {
          "type": "number",
          "description": "The chance of this group to be selected. The sum of all the probabilities of all the groups should be 1.",
          "exclusiveMinimum": 0,
          "maximum": 1
        },
        "protocol": {
          "oneOf": [
            {
              "$ref": "#/$defs/protocol"
            },
            {
              "type": "string",
              "description": "Name of the protocol to use.",
              "minLength": 1
            }
          ]
        }
      },
      "required": [
        "probability",
        "protocol"
      ],
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "description": "An image.",
      "properties": {
        "src": {
          "type": "string",
          "description": "Filename of the image.",
          "format": "uri-reference",
          "minLength": 1
        },
        "alt": {
          "type": "string",
          "description": "Needed for accessibility reasons (screen readers, image loading failure, etc.)."
        }
      },
      "required": [
        "src",
        "alt"
      ],
      "additionalProperties": false
    },
    "information-card": {
      "type": "object",
      "description": "An information card.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the card.",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "The description of the card.",
          "minLength": 1
        },
        "color": {
          "$ref": "#/$defs/color"
        },
        "icon": {
          "$ref": "#/$defs/image"
        }
      },
      "required": [
        "title",
        "description"
      ],
      "additionalProperties": false
    },
    "phase": {
      "type": "object",
      "description": "Phase of a testing protocol.",
      "properties": {
        "allowPreviousQuestion": {
          "type": "boolean",
          "description": "Whether to allow going to the previous question or not.",
          "default": true
        },
        "allowSkipQuestion": {
          "type": "boolean",
          "description": "Whether to allow skipping the current question without answering it or not.",
          "default": true
        },
        "randomize": {
          "type": "boolean",
          "description": "Whether to randomize the order of the questions or not.",
          "default": false
        },
        "questions": {
          "type": "array",
          "description": "List of questions.",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/phase-question"
              },
              {
                "type": "string",
                "description": "Name of the test question to use.",
                "minLength": 1
              }
            ]
          },
          "minLength": 1
        }
      },
      "required": [
        "questions"
      ],
      "additionalProperties": false
    },
    "protocol": {
      "type": "object",
      "description": "A testing protocol.",
      "properties": {
        "allowPreviousPhase": {
          "type": "boolean",
          "description": "Whether to allow going to the previous phase or not.",
          "default": true
        },
        "allowSkipPhase": {
          "type": "boolean",
          "description": "Whether to allow skipping the current phase without completing it or not.",
          "default": true
        },
        "randomize": {
          "type": "boolean",
          "description": "Whether to randomize the order of the phases or not.",
          "default": false
        },
        "phases": {
          "type": "array",
          "description": "Phases of the testing protocol.",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/phase"
              },
              {
                "type": "string",
                "description": "Name of the test phase to use.",
                "minLength": 1
              }
            ]
          },
          "minLength": 1
        }
      },
      "required": [
        "phases"
      ],
      "additionalProperties": false
    },
    "phase-question": {
      "type": "object",
      "description": "A test question. Must have either text, image, or both.",
      "properties": {
        "randomize": {
          "type": "boolean",
          "description": "Whether to randomize the order of the options or not.",
          "default": false
        },
        "text": {
          "type": "string",
          "description": "The question's text.",
          "minLength": 1
        },
        "image": {
          "$ref": "#/$defs/image"
        },
        "options": {
          "type": "array",
          "description": "List of options.",
          "items": {
            "$ref": "#/$defs/test-option"
          },
          "minLength": 1
        }
      },
      "required": [
        "options"
      ],
      "minProperties": 2,
      "additionalProperties": false
    },
    "question-select-multiple": {
      "properties": {
        "type": {
          "type": "string",
          "description": "The question type.",
          "enum": [
            "select-multiple"
          ]
        },
        "options": {
          "type": "array",
          "description": "The list of options.",
          "items": {
            "$ref": "#/$defs/form-option"
          },
          "minItems": 2
        },
        "min": {
          "type": "integer",
          "description": "The minimum number of options to select.",
          "minimum": 0
        },
        "max": {
          "type": "integer",
          "description": "The maximum number of options to select."
        },
        "other": {
          "type": "boolean",
          "description": "Whether to add an 'Other' option at the end of the options list or not.",
          "default": false
        }
      },
      "required": [
        "type",
        "options",
        "min",
        "max"
      ]
    },
    "question-select-one": {
      "properties": {
        "type": {
          "type": "string",
          "description": "The question type.",
          "enum": [
            "select-one"
          ]
        },
        "options": {
          "type": "array",
          "description": "The list of options.",
          "items": {
            "$ref": "#/$defs/form-option"
          },
          "minItems": 2
        },
        "other": {
          "type": "boolean",
          "description": "Whether to add an 'Other' option at the end of the options list or not.",
          "default": false
        }
      },
      "required": [
        "type",
        "options"
      ]
    },
    "question-number": {
      "properties": {
        "type": {
          "type": "string",
          "description": "The question type.",
          "enum": [
            "number"
          ]
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text to be shown when the question hasn't been answered yet.",
          "minLength": 1
        },
        "min": {
          "type": "number",
          "description": "The minimum number allowed."
        },
        "max": {
          "type": "number",
          "description": "The maximum number allowed."
        },
        "step": {
          "type": "number",
          "description": "The increment interval when using the arrow buttons/keys.",
          "exclusiveMinimum": 0
        }
      },
      "required": [
        "type",
        "placeholder",
        "min",
        "max",
        "step"
      ]
    },
    "question-slider": {
      "properties": {
        "type": {
          "type": "string",
          "description": "The question type.",
          "enum": [
            "slider"
          ]
        },
        "min": {
          "type": "number",
          "description": "The minimum number allowed."
        },
        "max": {
          "type": "number",
          "description": "The maximum number allowed."
        },
        "step": {
          "type": "number",
          "description": "The increment interval for the slider.",
          "exclusiveMinimum": 0
        },
        "labels": {
          "$ref": "#/$defs/range-labels"
        }
      },
      "required": [
        "type",
        "min",
        "max",
        "step"
      ]
    },
    "question-text-short": {
      "properties": {
        "type": {
          "type": "string",
          "description": "The question type.",
          "enum": [
            "text-short"
          ]
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text to be shown when the question hasn't been answered yet.",
          "minLength": 1
        },
        "minLength": {
          "type": "integer",
          "description": "The minimum length of the answer.",
          "minimum": 1
        },
        "maxLength": {
          "type": "integer",
          "description": "The maximum length of the answer."
        }
      },
      "required": [
        "type",
        "placeholder",
        "minLength",
        "maxLength"
      ]
    },
    "question-text-long": {
      "properties": {
        "type": {
          "type": "string",
          "description": "The question type.",
          "enum": [
            "text-long"
          ]
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text to be shown when the question hasn't been answered yet.",
          "minLength": 1
        },
        "minLength": {
          "type": "integer",
          "description": "The minimum length of the answer.",
          "minimum": 1
        },
        "maxLength": {
          "type": "integer",
          "description": "The maximum length of the answer."
        }
      },
      "required": [
        "type",
        "placeholder",
        "minLength",
        "maxLength"
      ]
    },
    "range-labels": {
      "type": "object",
      "description": "Labels for different points in a numeric range.",
      "patternProperties": {
        "^\\d+(\\.\\d+)?$": {
          "type": "string",
          "description": "The label for that number.",
          "minLength": 1
        }
      },
      "minProperties": 2,
      "additionalProperties": false
    },
    "test-option": {
      "type": "object",
      "description": "An option. Must have either text, image, or both.",
      "properties": {
        "text": {
          "type": "string",
          "description": "The options's text.",
          "minLength": 1
        },
        "image": {
          "$ref": "#/$defs/image"
        },
        "correct": {
          "type": "boolean",
          "description": "Whether it's the correct option or not.",
          "default": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  }
}
