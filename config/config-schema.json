{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JSON schema for PoCoPI's configuration file",
  "type": "object",
  "properties": {
    "groups": {
      "type": "object",
      "description": "List of test groups",
      "patternProperties": {
        "^\\w+$": {
          "$ref": "#/$defs/group"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "protocols": {
      "type": "object",
      "description": "List of protocols the test groups will use",
      "patternProperties": {
        "^\\w+$": {
          "$ref": "#/$defs/protocol"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    }
  },
  "required": [
    "groups"
  ],
  "additionalProperties": false,
  "$defs": {
    "group": {
      "type": "object",
      "description": "A test group",
      "properties": {
        "probability": {
          "type": "number",
          "description": "The chance of this group to be selected. The sum of all the probabilities of all the groups should be 1.",
          "exclusiveMinimum": 0,
          "maximum": 1
        },
        "protocol": {
          "type": "string",
          "description": "Name of the protocol to use",
          "minLength": 1
        }
      },
      "required": [
        "probability",
        "protocol"
      ],
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "description": "An image",
      "properties": {
        "src": {
          "type": "string",
          "description": "Where the image is located",
          "format": "uri-reference",
          "minLength": 1
        },
        "alt": {
          "type": "string",
          "description": "Needed for accessibility reasons (screen readers, image loading failure, etc.)"
        }
      },
      "required": [
        "src",
        "alt"
      ],
      "additionalProperties": false
    },
    "option": {
      "type": "object",
      "description": "An option",
      "properties": {
        "src": {
          "type": "string",
          "description": "Where the image is located",
          "format": "uri-reference",
          "minLength": 1
        },
        "alt": {
          "type": "string",
          "description": "Needed for accessibility reasons (screen readers, image loading failure, etc.)"
        },
        "correct": {
          "type": "boolean",
          "description": "Whether it's the correct option or not. Only one option should be marked as correct.",
          "default": false
        }
      },
      "required": [
        "src",
        "alt"
      ],
      "additionalProperties": false
    },
    "phase": {
      "type": "object",
      "description": "Phase of a testing protocol",
      "properties": {
        "allowPreviousQuestion": {
          "type": "boolean",
          "description": "Whether to allow going to the previous question or not",
          "default": true
        },
        "allowSkipQuestion": {
          "type": "boolean",
          "description": "Whether to allow skipping the current question without answering it or not",
          "default": true
        },
        "randomize": {
          "type": "boolean",
          "description": "Whether to randomize the order of the questions or not",
          "default": false
        },
        "questions": {
          "type": "array",
          "description": "List of questions",
          "items": {
            "$ref": "#/$defs/question"
          },
          "minLength": 2
        }
      },
      "required": [
        "questions"
      ],
      "additionalProperties": false
    },
    "protocol": {
      "type": "object",
      "description": "A testing protocol",
      "properties": {
        "allowPreviousPhase": {
          "type": "boolean",
          "description": "Whether to allow going to the previous phase or not",
          "default": true
        },
        "allowSkipPhase": {
          "type": "boolean",
          "description": "Whether to allow skipping the current phase without completing it or not",
          "default": true
        },
        "randomize": {
          "type": "boolean",
          "description": "Whether to randomize the order of the phases or not",
          "default": false
        },
        "phases": {
          "type": "array",
          "description": "Phases of the testing protocol",
          "items": {
            "$ref": "#/$defs/phase"
          },
          "minLength": 2
        }
      },
      "additionalProperties": false
    },
    "question": {
      "type": "object",
      "description": "Test question",
      "properties": {
        "randomize": {
          "type": "boolean",
          "description": "Whether to randomize the order of the options or not",
          "default": false
        },
        "img": {
          "$ref": "#/$defs/image"
        },
        "options": {
          "type": "array",
          "description": "List of options",
          "items": {
            "$ref": "#/$defs/option"
          },
          "minLength": 2
        }
      },
      "required": [
        "img",
        "options"
      ],
      "additionalProperties": false
    }
  }
}
